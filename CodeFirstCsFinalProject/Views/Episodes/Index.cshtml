@model IEnumerable<CodeFirstCsFinalProject.Models.Episode>

@{
    ViewBag.Title = "Index";
}

<h2>Fake TV Show Episodes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Synopsis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrigionalAirDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Synopsis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrigionalAirDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duration)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EpisodeId }) |
            @Html.ActionLink("Details", "Details", new { id=item.EpisodeId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EpisodeId })
        </td>
    </tr>
}

</table>
